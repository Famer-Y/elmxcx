.main {
  z-index: 0;
}

.topbar {
  padding: 5px 10px 8px 10px;
  color: #fff;
  background-color: #0097FE;
}

.topbar-item-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  margin-bottom: 5px;
}

.address {
  width: 100%;
  font-size: 17px;
  font-weight: bold;
} 

.address .address-left {
  display: block;
  float: left;
  min-width: 100px;
  max-width:75%;
  text-overflow: ellipsis;  /*替换.*/
  white-space: nowrap;  /*不进行换行*/
  overflow: hidden; /*超过区域隐藏*/
}

.address_icon {
  width: 17px;
  height: 17px;
  padding-right: 4px; 
  margin-bottom: -3px;
}

.address-zhedie {
  display: block;
  float: left;
  width: 8px;
  height: 8px;
  padding-top: 5px;
  margin-left: 5px;
}

.weather {
  display: flex;
}

.weather_text {
  margin: 2px;
  text-align: right;
}

.up {
  display:  block;
  font-size: 14px;
  font-weight: 600;
}
.down {
  display:  block;
  font-size: 8px;
  
}

.weather_icon {
  width: 25px;
  height: 25px;
  padding-top: 8px;
}

.search {
  border: 1px solid #ffffff;
  background-color: #ffffff;
  border-radius: 10px/50%;
  color: #707070;
  font-size: 12px;
  padding: 5px;
  text-align: center;
}
.search_icon {
  width: 10px;
  height: 10px;
}

.show {
  background-color: #efefef;
  height: 100%;
}

.show image {
  width: 100%;
}

.classify {
  background-color: #ffffff;
  padding: 0 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.classify .classify-item { 
  width: 100%;
  height: 100%;
  /* padding: 10px 5px; */
  margin-top: 10px;
  margin-bottom: 10px;
}

.classify-icon {
  width: 100%;
}

.shop-block {
  margin-top: 5px;
  background-color: #ffffff;
  color: #707070;
}

.shop-block-top {
  padding: 10px;
  font-size: 12px;
  border-bottom: 1px solid #ddd;
}

.shop-block-top .filters {
  display: flex;
  justify-content: space-between;
}

.color-000 {
  color: #000;
}

.shop-block-top .filters .filters-item{
  display: flex;
  justify-content: center;
 
}

.shop-block-top .filters .filters-item .middle{
  margin: 0 30px;
}

.sort-type {
  font-weight: bolder;
}

.shop-block-content{
  padding: 10px 10px 5px 10px;
}
.shop-block-content .content-top {  
  display: flex;
  width: 100%;
  border-bottom: 1px solid #ddd; 
  padding-bottom: 2px; 
}

.shop-block-content .content-top .shop-logo {
  width: 75px;
  height: 75px;
}

.shop-block-content .content-top .shop-logo image{
  width: 70px;
  height: 70px;
}

.shop-block-content .content-top .shop-desc {
  width: 100%;
  padding-left: 10px;
}

.shop-block-content .content-top .shop-desc .shop-name{
  font-weight: bold;
  color: #000;
}

.shop-block-content .content-top .shop-desc .shop-score-sell{
  font-size: 10px;
  /* padding: 8px 0;  */
  margin: 6px 0;
}

.shop-block-content .content-top .shop-desc .shop-score-sell .score-star{
  color: orange;
  font-size: 14px;
  padding-right: 5px;
}

.shop-block-content .content-top .shop-desc .shop-score-sell .score-number{
  color: orangered;
  padding-right: 10px;
}

.shop-block-content .content-top .shop-desc .dispatching{
  font-size: 10px; 
}

.shop-block-content .content-top .shop-desc .dispatching .price{
  display: inline-block; 
}

.shop-block-content .content-top .shop-desc .dispatching .distance-time{
  display: block;
  float: right; 
}

.shop-block-content .content-top .shop-desc .dispatching .distance-time .time{
  color: #1A90E1;
}

.shop-block-content .content-middle {
  margin-top: 5px;
  font-size: 10px;
}

.shop-block-content .content-middle {
  display: flex;
  justify-content:space-between;
}

.shop-block-content .content-middle .discount .discount-item {
  margin-bottom: 2px; 
  display: flex;
  align-items: center;
}

.shop-block-content .content-middle .discount .discount-item image {
  width: 14px;
  height: 14px;  
  margin-right: 3px; 
}

.shop-block-content .content-bottom {
  font-size: 10px;
}

.shop-block-content .content-bottom .foodImage {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #353535;
}

.shop-block-content .content-bottom .foodImage .foodImage-item{
  width: 100%;
  height: 100%;
  border: 1px solid #EEEEEE;
}

.shop-block-content .content-bottom .foodImage .foodImage-item image{
  width: 100%;
  height: 100%;
}

.image-middle {
  margin-left: 10px;
  margin-right: 10px;
}

.shop-block-content .content-bottom .foodImage .foodImage-item .about-food {
  margin-left: 5px;
  margin-bottom: 5px;
}

.shop-block-content .content-bottom .foodImage .foodImage-item .foodName {
  margin: 5px 0;
}

.shop-block-content .content-bottom .foodImage .foodImage-item .about-food .price-icon {
  font-size: 8px;
  color: #f20;
}

.shop-block-content .content-bottom .foodImage .foodImage-item .about-food .now-price{
  font-size: 12px;
  color: #f20;
  margin-right: 2px; 
  margin-left: 1px;
}

.shop-block-content .content-bottom .foodImage .foodImage-item .about-food .old-price{
  font-size: 8px;
  color: #707070;
}

.color-1990E6 {
  color: #1990E6;
}

.ul {
  color: #000;
  font-size: 12px;
  margin-left: 10px;
  margin-right: 10px;
}

 .ul .li {
  margin: 20px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.ul .active {
  color: #1990E6;
}

.main {
  z-index: 0;
}

.btm {
  z-index: 1;
  position: fixed;
  top: 0px;
  left: 0px;
  background-color: #bbb;
  width: 100%;
  height: 100%;
  filter:alpha(Opacity=80);-moz-opacity:0.5;opacity: 0.5;
}

.zhpx-pop {
  z-index: 2;
  position: fixed;
  top: 0px;
  left: 0px;
  background-color: #fff;
  width: 100%;
}

.sort-type-icon {
  width: 6px;
  height: 6px;
  margin-left: 4px;
  padding-bottom: 1px;
}

