.topbar {
  padding: 10px;
  color: #fff;
  background-color: #0097FE;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.address {
  min-width: 100px;
  max-width: 72%;
  font-size: 16px;
  font-weight: 600;
  text-overflow: ellipsis;  /*替换.*/
  white-space: nowrap;  /*不进行换行*/
  overflow: hidden; /*超过区域隐藏*/
}

.address_icon {
  margin-bottom: -3px;
  width: 20px;
  height: 20px;
  padding-right: 4px; 
}

.weather {
    display: flex;
}

.weather_text {
  margin: 5px;
}

.up {
  display:  block;
  font-size: 14px;
  font-weight: 600;
}
.down {
  display:  block;
  font-size: 8px;
}

.weather_icon {
  width: 25px;
  height: 25px;
  padding-top: 8px;
   /* margin-bottom: -3px;  */
}