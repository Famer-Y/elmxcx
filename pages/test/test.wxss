.custom-dialog {
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
}

.custom-dialog .dialog-mask {
  position: absolute;
  background: rgba(0, 0, 0, 0.7);
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.custom-dialog .dialog-model {
  position: absolute;
  top: 30%;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
}

.custom-dialog .dialog-model .dialog-content {
  background-color: #fff;
  width: 240px;
  border-radius: 3px;
  padding: 15px 15px 0 15px;
}

.custom-dialog .dialog-model .dialog-content .top {
  display: flex;
  justify-content: space-between;
}

.custom-dialog .dialog-model .dialog-content .top .fill {
  flex-grow: 0; 
}

.custom-dialog .dialog-model .dialog-content .top .title {
  flex-grow: 2; 
  text-align: center;
  color: #373737;
  font-weight: 580;
}

.custom-dialog .dialog-model .dialog-content .top .cancel {
  flex-grow: 0;
}

.custom-dialog .dialog-model .dialog-content image {
  width: 16px;
  height: 16px;
}

.custom-dialog .dialog-model .dialog-content .spec {
  margin-top: 10px; 
}

.custom-dialog .dialog-model .dialog-content .spec .spec-item .spec-title {
  color: #777777;
  font-size: 12px;
}

.custom-dialog .dialog-model .dialog-content .spec .spec-item .spec-content {
  display: flex;
  flex-wrap: wrap;
  margin-top: 3px;
}

.custom-dialog .dialog-model .dialog-content .spec .spec-item .spec-content .spec-content-item {
  font-size: 13px;
  padding: 3px 6px;
  width: 35px;
  text-align: center;
  border: 1px solid #777777;
  border-radius: 15px/50%;
  margin-right: 10px;
  margin-top: 7px;
}

.custom-dialog .dialog-model .dialog-content .spec .spec-item .spec-content .active {
  color: #3298EA;
  border-color: #3298EA;
}

.custom-dialog .dialog-model .dialog-content .footer {
  margin-top: 15px;
  padding: 10px 0; 
  background-color: #F9F9F9;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.custom-dialog .dialog-model .dialog-content .footer .price {
  font-size: 16px;
  color: #FE6100;
  font-weight: bold;
}

.custom-dialog .dialog-model .dialog-content .footer .button {
  background-color: #3298EA;
  padding: 5px 10px;
  border-radius: 5px;
  font-size: 16px;
  color: #fff;
}