.main {
  width: 100%;
  height: 100%;
  color: #000;
  background-color: #fff;  
}

.top {

}

.top .top-image {
  width: 100%;
}

.top .top-image image {
  width: 100%;
  height: 100%;
}

.top .top-avatar {
  width: 100%;
  height: 100%;
  margin-top: -40px;
  display: flex;
  justify-content: center;
}

.top .top-avatar image {
  width: 70px;
  height: 70px;
  border-radius: 50%;
}

.detail {
  margin-top: 5px;  
  text-align: center;
}

.detail .shop-name {
  font-size: 20px;
  font-weight: bold;
}

.detail .more {
  font-size: 12px;
  margin: 5px 0;
}

.detail .sign {
  font-size: 12px;
  color: #C0C0C0;
  margin: 5px 0;
  padding: 0 50px;
  text-overflow: ellipsis;  /*替换.*/
  white-space: nowrap;  /*不进行换行*/
  overflow: hidden; /*超过区域隐藏*/
}

.detail .activity {
  display: flex;
  justify-content: space-between;
  padding: 2px 8px;
  font-size: 12px;
  color: #A9A9A9;
  margin: 5px 20px; 
  border: 1px solid #EEEEEE;
}

.margin-custom {
  margin: 0 3px;
}

.sub {
  width: 14px;
  height: 14px;
}

.shop .top-classify {
  display: flex;
  justify-content:space-around;
  padding-top: 10px;
  padding-bottom: 2px;
  font-size: 14px;
  border-bottom: 2px solid #DEDEDE;
}

.shop .top-classify .top-classify-item {
  padding-bottom: 10px;
}

.shop .top-classify .action {
  border-bottom: 2px solid #2794F7;
}

.shop .shop-detail {
  display: flex;
  height: 100%;
}

.good-classify {
  width: 100px;
  height: 100%;
  background-color: #F8F8F8;
  text-align: center;
}

.good-classify .classify-item {
  padding: 15px 0;
  font-size: 12px;
  border-bottom: 1px solid #000;
}

.good-container {
  background-color: #fff; 
  padding-left: 10px;
}

.good-container .goods .classify-content {
  padding: 5px 0;
  margin-bottom: 10px; 
}

.good-container .goods .classify-content .classify-name{
  font-size: 12px;
}
.good-container .goods .classify-content .classify-sign{
  font-size: 9px;
  color: #CCCCCC;
  margin-left: 10px;
}

.good-container .goods .good-all {
  display: flex;
  margin-bottom: 20px;  
}

.good-container .goods .good-all .good-image image {
  width: 80px;
  height: 80px;
}

.good-container .goods .good-all .good-detail{
  width: 100%;
  height: 100%;
  padding: 0 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.good-container .goods .good-all .good-detail .good-name {
  color: #333333;
  font-size: 16px;
  font-weight: 600;
}

.good-container .goods .good-all .good-detail .good-sign {
  color: #C4C4C4;
  font-size: 10px;
}

.good-container .goods .good-all .good-detail .sell-good {
  color: #8B8B8B;
  font-size: 12px;
}

.good-container .goods .good-all .good-detail .sell-good .sale{
  margin-right: 5px;
}

.good-container .goods .good-all .good-detail .price-buy {
  display: flex;
  justify-content: space-between;
  color: #ED6B13;
  margin-top: 5px;
}

.good-container .goods .good-all .good-detail .price-buy .price{
  font-size: 14px;
}

.good-container .goods .good-all .good-detail .price-buy .select{
  padding: 5px 10px;
  color: #fff;
  font-size: 10px; 
  background-color: #3299E8;
  border-radius: 10px/50%;
}

.good-container .goods .good-all .good-detail .price-buy .buy-logo image{
  width: 20px;
  height: 20px;
} 
