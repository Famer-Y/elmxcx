.main {
  width: 100%;
  height: 100%;
  color: #000;
  background-color: #fff;  
}

.top {

}

.top .top-image {
  width: 100%;
}

.top .top-image image {
  width: 100%;
  height: 100%;
}

.top .top-avatar {
  width: 100%;
  height: 100%;
  margin-top: -40px;
  display: flex;
  justify-content: center;
}

.top .top-avatar image {
  width: 70px;
  height: 70px;
  border-radius: 50%;
}

.detail {
  margin-top: 5px;  
  text-align: center;
}

.detail .shop-name {
  font-size: 20px;
  font-weight: bold;
}

.detail .more {
  font-size: 12px;
  margin: 5px 0;
}

.detail .sign {
  font-size: 12px;
  color: #C0C0C0;
  margin: 5px 0;
  padding: 0 50px;
  text-overflow: ellipsis;  /*替换.*/
  white-space: nowrap;  /*不进行换行*/
  overflow: hidden; /*超过区域隐藏*/
}

.detail .activity {
  display: flex;
  justify-content: space-between;
  padding: 2px 8px;
  font-size: 12px;
  color: #A9A9A9;
  margin: 5px 20px; 
  border: 1px solid #EEEEEE;
}

.margin-custom {
  margin: 0 3px;
}

.sub {
  width: 14px;
  height: 14px;
}

.top-classify {
  display: flex;
  justify-content:space-around;
  padding-top: 10px;
  padding-bottom: 2px;
  font-size: 14px;
  border-bottom: 2px solid #DEDEDE;
}

.top-classify .top-classify-item {
  padding-bottom: 10px;
}

.top-classify .action {
  border-bottom: 2px solid #2794F7;
}

.container {
  display: flex;
}

.classify-container {
  width: 20%;
  background-color: #F8F8F8;
}

.classify-container .classify-item {
  padding: 15px 5px;
  font-weight: bold;
  font-size: 13px;
  color: #7F7F7F;
  display: flex;
  justify-content: center;
  border-bottom: 1px solid #000;
}

.classify-container .active {
  background-color: #fff;
  color: #666666;
}

.foods-container {
  width: 80%;
  background-color: #fff;
}

.foods-container .foods{
  max-width: 100%;
  margin: 10px;
}

.foods-container .foods .foods-classify {
  width: 100%;
  display: flex;
}

.foods-container .foods .foods-classify .classify-name {
  width: 35px;
  font-weight: bold;
  font-size: 13px;
  color: #666666;
}

.foods-container .foods .foods-classify .classify-desc {
  width: 320rpx;
  font-size: 12px;
  color: #CDCDCD;
}

.foods-container .foods .foods-item {
  margin: 10px 0;
  width: 100%;
  height: 75px;
  display: flex; 
}

.foods-container .foods .foods-item .food-image {
  margin-right: 10px;
}

.foods-container .foods .foods-item .food-image image {
  width: 75px;
  height: 75px;
}

.foods-container .foods .foods-item .food-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}

.foods-container .foods .foods-item .food-detail .food-name{
  flex-grow: 0;
  font-size: 14px;
  font-weight: bold;
  color: #323232;
}

.foods-container .foods .foods-item .food-detail .food-desc {
  margin-top: 2px;
  flex-grow: 0;
  font-size: 10px;
  width: 330rpx;
  color: #A0A0A0;
}

.foods-container .foods .foods-item .food-detail .achievement {
  margin-top: 2px;
  flex-grow: 0;
  font-size: 11px;
  width: 330rpx;
  color: #787878;
}

.foods-container .foods .foods-item .food-detail .achievement .sales{
  margin-right: 5px;
}

.foods-container .foods .foods-item .food-detail .price-spec {
  flex-grow: 2;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.foods-container .foods .foods-item .food-detail .price-spec .price {
  font-size: 14px;
  font-weight: bold;
  color: #FB6804;
}

.foods-container .foods .foods-item .food-detail .price-spec .spec {
  padding: 3px 5px;
  color: #fff;
  font-size: 8px;
  font-weight: bolder;
  border-radius: 10px/50%;
  background-color: #3298E8;
}


.foods-container .foods .foods-item .food-detail .price-spec .buy-logo image {
  width: 18px;
  height: 18px;
}
